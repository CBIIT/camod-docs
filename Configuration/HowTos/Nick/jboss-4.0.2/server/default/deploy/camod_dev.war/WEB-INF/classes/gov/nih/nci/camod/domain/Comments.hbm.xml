<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="Comments" 
    	table="comments"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="comments_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>
	    
	    <!-- remark -->
        <property name="remark" 
        	column="remark" 
        	type="string"
        	length="2000"/>
        	
        <!-- state -->
        <property name="state" 
        	column="state" 
        	type="string"/>
        	
        <!-- AbstractCancerModel (many-to-one) -->
        <many-to-one name="abstractCancerModel"
        	class="AbstractCancerModel"
        	column="abs_cancer_model_id"/>
        	
        <!-- Availability: this is really a one-to-one relationship with unique=true -->
        <!-- (one-to-one) -->
        <many-to-one name="availability"
        	class="Availability"
        	column="availability_id"
        	cascade="all"
        	unique="true"/> 
        	
        <!-- ModelSection (many-to-one) -->
        <many-to-one name="modelSection"
        	class="ModelSection"
        	column="model_section_id"/> 
        	
        <!-- Person (many-to-one) -->
        <many-to-one name="submitter"
        	class="Person"
        	column="party_id"/>         	        	       	        	
        	
	</class>
</hibernate-mapping>