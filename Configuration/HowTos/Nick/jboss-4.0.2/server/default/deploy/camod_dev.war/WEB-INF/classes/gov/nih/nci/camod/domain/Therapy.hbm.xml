<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="Therapy"
		table="therapy"
        lazy="true">
	    
	    <!-- id -->
	    <id name="id" 
	    	column="therapy_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>	
	    
        <!-- experiment -->
        <property name="experiment" 
        	column="experiment" 
        	type="string"/>
        	
        <!-- results -->
        <property name="results" 
        	column="results" 
        	type="string"/>
        	
        <!-- toxicityGrade -->
        <property name="toxicityGrade" 
        	column="toxicity_grade" 
        	type="string"/>	        	
        
        <!-- biomarker -->
        <property name="biomarker" 
        	column="biomarker" 
        	type="string"/>	
        
        <!-- tumorResponse -->
        <property name="tumorResponse" 
        	column="tumor_response" 
        	type="string"/>
        	        	
        <!-- comments -->
        <property name="comments" 
        	column="comments" 
        	type="string"/>
        	
        	
        <!-- Agent (many-to-one) -->
        <many-to-one name="agent"
        	class="Agent"
        	column="agent_id"
        	cascade="save-update"/> 
        	
        <!-- developmentalStage-->
	    <many-to-one 
	    	name="developmentalStage" 
        	column="developmental_stage_id"
        	class="DevelopmentalStage"
        	cascade="save-update"/>          	
        	
        <!-- Treatment: this is really a one-to-one relationship with unique=true -->
        <!-- (one-to-one unidirectional) -->
        <many-to-one
        	name="treatment"
        	column="treatment_id"
        	class="Treatment"
        	cascade="all"
        	unique="true"/>
        
        <!-- publicationCollection (one-to-many unidirectional with join table) -->
        <set name="publicationCollection" 
        	table="therapy_publication"
        	lazy="true" 
        	cascade="all"
		sort="natural">
        	
        	<key column="therapy_id"/>
        	<many-to-many column="publication_id"
            	unique="true"
            	class="Publication"/>
        </set>
	
        	
        	        
	</class>
</hibernate-mapping>