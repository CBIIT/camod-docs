<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>    
    <context-param>
	<param-name>gov.nih.nci.evs.app.logging.info</param-name>
	<param-value>/usr/local/jboss402/server/ncicb-app/log/EVSinfoLog.txt</param-value>
    </context-param>


	<servlet>
		<servlet-name>InitTreeServlet</servlet-name>
        <servlet-class>gov.nih.nci.evs.app.servlet.InitTreeServlet</servlet-class>
	 <load-on-startup>1</load-on-startup> 
	</servlet>
	<servlet>
		<servlet-name>InitializeLog</servlet-name>
        <servlet-class>gov.nih.nci.evs.app.servlet.InitializeLog</servlet-class>
		<load-on-startup>1</load-on-startup> 
	</servlet>	
	

	<servlet-mapping>
        	<servlet-name>
            		InitializeLog
        	</servlet-name>
        	<url-pattern>
            		/Log
        	</url-pattern>
	</servlet-mapping>
  <welcome-file-list>
    	<welcome-file>TreeExample.html</welcome-file>
  </welcome-file-list>

</web-app>
