<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="CellLine" 
    	table="cell_line"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="cell_line_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>	    

	    <!-- name -->
        <property name="name" 
        	column="name" 
        	type="string"/>        	
	    
	    <!-- experiment -->
        <property name="experiment" 
        	column="experiment" 
        	type="string"
        	length="2000"/>
        	
        <!-- results -->
        <property name="results" 
        	column="results" 
        	type="string"
        	length="2000"/>
	    
	    <!-- comments -->
        <property name="comments" 
        	column="comments" 
        	type="string"
        	length="2000"/>
       
        <!-- publicationCollection (one-to-many unidirectional with join table) -->
        <set name="publicationCollection"
        	table="cell_line_publication"  
        	lazy="true" 
        	cascade="all-delete-orphan"
		sort="natural">
        	
        	<key column="cell_line_id"/>
        	<many-to-many column="publication_id"
            	unique="true"
            	class="Publication"/>
        </set>
        
        <!-- organ (many-to-one unidirectional) -->
        <many-to-one
        	name="organ"
        	column="organ_id"
        	class="Organ"
        	cascade="save-update"/>

  	
        	
	</class>
</hibernate-mapping>