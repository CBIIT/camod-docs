<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="Log" 
    	table="log"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="log_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>	    
	    
	    <!-- notes -->
        <property name="notes" 
        	column="notes" 
        	type="string"
			length="2000"/>
        	
	    <!-- type -->
        <property name="type" 
        	column="type" 
        	type="string"/> 
        	
	    <!-- subsystem -->
        <property name="subsystem" 
        	column="sub_system" 
        	type="string"/> 
        	
	    <!-- timestamp -->
        <property name="timestamp" 
        	column="timestamp" 
        	type="string"/> 
        	
        <!-- Person (many-to-one) -->
        <many-to-one name="submitter"
        	class="Person"
        	column="party_id"/> 
        	
        <!-- AbstractCancerModel (many-to-one) -->
        <many-to-one name="cancerModel"
        	class="AbstractCancerModel"
        	column="abs_cancer_model_id"/> 
        	
        <!-- Comment: this is really a one-to-one relationship with unique=true --> 
        <!-- (one-to-one) -->
        <many-to-one name="comment"
        	class="Comments"
        	column="comments_id"
        	cascade="all"
        	unique="true"/>        	       	        	       	       	       	
        	
	</class>
</hibernate-mapping>