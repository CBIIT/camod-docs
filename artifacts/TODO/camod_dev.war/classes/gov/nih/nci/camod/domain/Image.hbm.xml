<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="Image"
		table="image"
        lazy="true">
	    
	    <!-- id -->
	    <id name="id" 
	    	column="image_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>	
	    
        <!-- title -->
        <property name="title" 
        	column="title" 
        	type="string"/>
        	
        <!-- description -->
        <property name="description" 
        	column="description" 
        	type="string"
        	length="4000"/>	
        	
        <!-- fileServerLocation -->
        <property name="fileServerLocation" 
        	column="file_server_location" 
        	type="string"/>
        	
        <!-- stainingMethod (many-to-one unidirectional) -->
        <many-to-one
        	name="stainingMethod"
        	column="staining_method_id"
        	class="StainingMethod"
        	cascade="save-update"/>
	</class>
</hibernate-mapping>