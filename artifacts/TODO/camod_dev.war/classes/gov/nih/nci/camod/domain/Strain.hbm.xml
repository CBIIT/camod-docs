<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="Strain" 
    	table="strain"
        lazy="true"
        mutable="false">


	    <!-- id -->
	    <id name="id" 
	    	column="strain_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>
    
        	
        <!-- name -->
        <property name="name" 
        	column="name" 
        	type="string"/>
        	
        <!--  nameUnctrlVocab -->
        <property name="nameUnctrlVocab" 
        	column="name_unctrl_vocab" 
        	type="string"/>        
        	
        <!-- abbreviation -->
        <property name="abbreviation" 
        	column="abbreviation" 
        	type="string"/>	
        	
        <!-- conceptCode -->
        <property name="conceptCode" 
        	column="concept_code" 
        	type="string"/>
        	
        <!-- species-->
	    <many-to-one name="species" 
        	column="species_id"
        	not-null="true"
        	cascade="save-update"/>   	
        	
        <!-- mutationIdentifier: this is really a one-to-one relationship with unique=true -->
        <!-- (one-to-one unidirectional) -->
        <many-to-one name="mutationIdentifier"
        	class="MutationIdentifier"
        	column="mutation_identifier_id"
        	cascade="all"
        	unique="true"/> 
        	
	</class>
</hibernate-mapping>